<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/OldLace"
    tools:context=".SearchWordActivity">

    <Button
        android:id="@+id/searchWordBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="158dp"
        android:layout_marginTop="138dp"
        android:layout_marginEnd="159dp"
        android:layout_marginBottom="214dp"
        android:text="Search word"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchWordText" />

    <EditText
        android:id="@+id/searchWordText"
        android:layout_width="258dp"
        android:layout_height="49dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="286dp"
        android:layout_marginEnd="101dp"
        android:layout_marginBottom="138dp"
        android:ems="10"
        android:hint="Type word you want to check"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/searchWordBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>